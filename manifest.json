{
  "manifest_version": 3,
  "name": "Media Editor",
  "description": "Save/Convert photo files in your custom formats.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "contextMenus" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
